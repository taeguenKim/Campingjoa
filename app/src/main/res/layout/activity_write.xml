<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".board.WriteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/mymy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FF03A9F4"
            android:fontFamily="@font/font02"
            android:gravity="center"
            android:text="작성하기"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp" />

    </RelativeLayout>

        <EditText
            android:id="@+id/write_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font02"
            android:padding="16dp"
            android:textSize="24sp"
            android:inputType="text"
            android:textColor="#FF000000"
            tools:ignore="HardcodedText"

            />
        <EditText
            android:id="@+id/write_contents_text"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:hint="내용을 입력해주세요"
            android:inputType="text"
            android:fontFamily="@font/font02"
            android:gravity="start"
            android:padding="8dp"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업로드된 사진"
        android:layout_gravity="center"
        android:textColor="#FF000000"
        android:textSize="20sp"
        android:fontFamily="@font/font02"/>

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_margin="8dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="80dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                android:layout_below="@+id/mymy"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/roundedbutton"
                />

            <TextView
                android:id="@+id/wirtepeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/font02"
                android:textColor="#FF000000"
                android:layout_marginTop="16dp"
                android:text="작성자 : "/>


            <TextView
                android:id="@+id/writename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/font02"
                android:textColor="#FF000000"
                android:textSize="24sp"
                android:text="홍길동"
                />


        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp">


        <Button
            android:id="@+id/image_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 추가"
            android:onClick="image_push"
            android:textSize="16sp"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:fontFamily="@font/font04"
            android:background="@drawable/roundedbutton3"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업로드"
            android:layout_toRightOf="@+id/image_push"
            android:layout_marginLeft="80dp"
            android:textSize="16sp"
            android:onClick="check_btn"
            android:textColor="#FFFFFFFF"
            android:textStyle="bold"
            android:fontFamily="@font/font04"
            android:background="@drawable/roundedbutton3"
            tools:ignore="HardcodedText" />


    </RelativeLayout>





</LinearLayout>