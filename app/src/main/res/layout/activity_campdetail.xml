<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotplace.CampdetailActivity"
    android:background="#FFFFFFFF">

    <Button
        android:id="@+id/back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:layout_margin="8dp"/>


    <TextView
        android:id="@+id/mymy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF03A9F4"
        android:fontFamily="@font/font02"
        android:gravity="center"
        android:text="캠핑장"
        android:textColor="#FFFFFFFF"
        android:textSize="24sp" />


    <ImageView
        android:layout_below="@+id/mymy"
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/camping01"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/imageView1"
        android:text="Title"
        android:textSize="36sp"
        android:fontFamily="@font/font04"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF000000"/>

    <TextView
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_below="@+id/textView1"
        android:background="#FF000000"
        android:layout_marginTop="16dp"
        android:layout_centerInParent="true"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/textView1"
        android:text="Title"
        android:textSize="16sp"
        android:fontFamily="@font/font04"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF000000"/>



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/textView2"
        android:text="Title"
        android:textSize="16sp"
        android:fontFamily="@font/font04"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF000000"/>

    <TextView
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:layout_below="@+id/textView"
        android:background="#FF000000"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/textView"
        android:text="Title"
        android:textSize="20sp"
        android:fontFamily="@font/font04"
        android:textColor="#FFFF0000"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView3"
        android:background="#FF000000"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/textView3"
        android:textStyle="bold"
        android:text="스웨거는 무료로 배포되는 스웨거 폰트 사용에 대한 자발적인 지원과 기부를 받고 있습니다.
여러분들의 소중한 기부금은 세브란스 병원 백혈병 환우 아이들의 치료비에 전액 지원됩니다. 감사합니다!!!!! "
        android:textSize="16sp"
        android:fontFamily="@font/font04"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약하러 가기"
        android:textColor="#FFFFFFFF"
        android:textStyle="bold"
        android:fontFamily="@font/font04"
        android:background="@drawable/roundedbutton3"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="24dp"
        android:onClick="haha"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView4"
        android:background="#FF000000"
        android:layout_marginTop="24dp"
        />

</RelativeLayout>